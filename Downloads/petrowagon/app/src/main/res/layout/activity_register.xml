<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">

    <include layout="@layout/topbar"
        android:id="@+id/topbar_reg"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar_reg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar_reg">

    <ImageView
        android:layout_width="@dimen/space100"
        android:layout_height="@dimen/space100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vector_smart_object"
        android:layout_marginTop="@dimen/space30"
        android:id="@+id/logo_reg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/logo_reg"
        android:layout_marginTop="@dimen/text30"
        android:layout_marginLeft="@dimen/space30"
        android:layout_marginRight="@dimen/space30"
        android:id="@+id/ll_reg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_man_user"
                    android:hint="First"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_username_reg"
                    android:background="@drawable/colorless"
                    android:textSize="@dimen/text18"
                    android:padding="@dimen/space3"
                    android:maxLines="1"
                    android:inputType="text"
                    android:fontFamily="@font/humans"
                    android:gravity="center_vertical"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_man_user"
                    android:hint="Last"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_lastname_reg"
                    android:background="@drawable/colorless"
                    android:textSize="@dimen/text18"
                    android:padding="@dimen/space3"
                    android:maxLines="1"
                    android:inputType="text"
                    android:fontFamily="@font/humans"
                    android:gravity="center_vertical"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"
            android:layout_marginTop="@dimen/space10"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_old_typical_phone"
                    android:hint="*********"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_phone_reg"
                    android:inputType="number"
                    android:background="@drawable/colorless"
                    android:padding="@dimen/space3"
                    android:textSize="@dimen/text18"
                    android:maxLines="1"
                    android:fontFamily="@font/humans"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"
            android:layout_marginTop="@dimen/space10"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_black_back_closed_envelope_shape"
                    android:hint="info@petrowagon.com"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_email_reg"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/colorless"
                    android:textSize="@dimen/text18"
                    android:padding="@dimen/space3"
                    android:maxLines="1"
                    android:fontFamily="@font/humans"
                    android:gravity="center_vertical"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasword"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"
            android:layout_marginTop="@dimen/space10"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="*********"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_pass_reg"
                    android:inputType="textPassword"
                    android:background="@drawable/colorless"
                    android:padding="@dimen/space3"
                    android:textSize="@dimen/text18"
                    android:maxLines="1"
                    android:fontFamily="@font/humans"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Pasword"
            android:textColor="@color/black"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text16"
            android:layout_marginTop="@dimen/space10"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space5"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="*********"
                    android:drawablePadding="@dimen/space20"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space5"
                    android:id="@+id/et_conf_pass_reg"
                    android:inputType="textPassword"
                    android:background="@drawable/colorless"
                    android:padding="@dimen/space3"
                    android:textSize="@dimen/text18"
                    android:maxLines="1"
                    android:fontFamily="@font/humans"


                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/space45"
            android:id="@+id/btn_reg_reg"
            android:textColor="@color/black"
            android:text="REGISTER"
            android:textSize="@dimen/text16"
            android:fontFamily="@font/humans"
            android:background="@drawable/grey_corners"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginBottom="@dimen/space10"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ll_reg"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By creating an account,you agree to our"
        />

        <LinearLayout
            android:layout_marginBottom="@dimen/space20"
            android:layout_marginTop="@dimen/space5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/terms"
            android:text="@string/term_of_service"
            android:textColor="@color/blue"
            android:fontFamily="@font/humans"
            android:textSize="@dimen/text14"/>

            <TextView
                android:layout_marginLeft="@dimen/space10"
                android:layout_marginRight="@dimen/space10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&amp;"
                android:textColor="@color/black"
                android:fontFamily="@font/humans"
                android:textSize="@dimen/text14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:id="@+id/privcyPolicy"
                android:textColor="@color/blue"
                android:fontFamily="@font/humans"
                android:textSize="@dimen/text14"/>
        </LinearLayout>

</LinearLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>